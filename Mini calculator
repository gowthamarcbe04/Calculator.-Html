        <script>
            function add()
            {e
                
                var first=parseInt(document.getElementById('Number1').value);
                var second=parseInt(document.getElementById('Number2').value);
                document.getElementById("Result").value=first+second;
                alert(document.getElementById("Result").value=first+second);
            }
            function subtract()
            {
                
                var first=parseInt(document.getElementById('Number1').value);
                var second=parseInt(document.getElementById('Number2').value);
                document.getElementById("Result").value=first-second;
                alert(document.getElementById("Result").value=first-second);
            }
            function multiply()
            {
                
                var first=parseInt(document.getElementById('Number1').value);
                var second=parseInt(document.getElementById('Number2').value);
                document.getElementById("Result").value=first*second;
                alert(document.getElementById("Result").value=first*second);
            }
            function divide()
            {
                
                var first=parseInt(document.getElementById('Number1').value);
                var second=parseInt(document.getElementById('Number2').value);
                document.getElementById("Result").value=first/second;
                alert( document.getElementById("Result").value=first/second);
            } 
            









            
        
            
